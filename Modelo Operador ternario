        return (
            <View>
                <Text style={Estilo.exercicio}>O Resultado Ã©: </Text>
                //operador ternario !!!
                {num % 2 === 0
                  ?  <Text style={Estilo.exercicio}> Par </Text> 
                  :  <Text style={Estilo.exercicio}> Impar </Text>                       
                }
                
